<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:entries="@array/pref_general_entry_titles"
        android:entryValues="@array/pref_general_entry_values"
        android:key="@string/pref_general_key"
        android:defaultValue="@string/pref_general_default"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_general_title" />


    <CheckBoxPreference
        android:title="@string/pref_favorite_title"
        android:key = "@string/pref_favorite_key"
        android:defaultValue="false"
        android:summaryOn="@string/pref_favorite_sum_on"
        android:summaryOff="@string/pref_favorite_sum_off"/>

</PreferenceScreen>
